<body>
  <header>
    <h1>Diabetes@Home</h1>
  </header>
  <nav>
    <a class="nav-button" href="/logout">Logout</a>
    <a
      class="nav-button"
      href="/clinician/dashboard"
    >Dashboard</a>
    <a
      class="nav-button"
      href="/clinician/{{patient._id}}"
    >{{patient.name}}</a>
  </nav>
  <main>
    <h3 class="text-center">{{patient.name}}'s Clinician Notes</h3>
    <div class="flex flex-space-around">
      <div class="flex flex-column">
        <div class="shadow-box flex-fit">
          <h3 class="text-center">Clinician Notes</h3>
          <form
          class="styled-form"
          name="noteform"
          id="noteform"
          method="post"
          >
            <div class="flex flex-column flex-wrap form-line">
                <textarea class="message-field" id="clinicianNote" name="clinicianNote"></textarea>
            </div>
            <button type="submit">Add Note</button>
          </form>
        </div>
        <div>
          <table class="clinician-styled-table" id="comments">
            <thead>
              <tr>
                <th width="20%">Date</th>
                <th width="80%">Note</th>
              </tr>
            </thead>
            <tbody>
              {{#each notes}}
                <tr>
                    <td width="20%">{{this.time}}</td>
                    <td width="80%" style="max-width: 300px">{{this.note}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
  <footer>
    <h3>This website has been designed by SpiderWebProTech</h3>
  </footer>
</body>