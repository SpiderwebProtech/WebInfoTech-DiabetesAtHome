<body>
  <header>
    <h1>Diabetes@Home</h1>
  </header>
  <nav>
    <a class="nav-button" href="/">Home</a>
  </nav>
  <main>
    <h3 class="text-center">Clinician Login</h3>
    <div class="flex flex-space-around">
      <div class="shadow-box">
        <form
          class="styled-form"
          name="loginform"
          id="loginform"
          action=""
          method="post"
        >
          <div class="flex flex-space-around flex-wrap form-line">
            <div class="flex flex-column form-line-field">
              <label for="email">Email:</label>
              <input type="text" id="email" name="email" />
            </div>
          </div>
          <div class="flex flex-space-around flex-wrap form-line">
            <div class="flex flex-column form-line-field">
              <label for="password">Password:</label>
              <input type="password" id="password" name="password" />
            </div>
          </div>
          {{#each flash}}
            <p class="alert">{{this}}</p>
          {{/each}}
          <button type="submit">Login</button>
        </form>
      </div>
    </div>
  </main>
  <footer>
    <h3>This website has been designed by SpiderWebProTech</h3>
  </footer>
</body>