<body>
  <header>
    <h1>Diabetes@Home</h1>
  </header>
  <nav>
    <a class="nav-button" href="/">Home</a>
    <a
      class="nav-button"
      href="/clinician/{{clinician._id}}/dashboard"
    >Dashboard</a>
    <a
      class="nav-button"
      href="/clinician/{{clinician._id}}/{{patient._id}}"
    >{{patient.name}}</a>
  </nav>
  <main>
    <h3 class="text-center">{{patient.name}}'s Thresholds</h3>
    <div class="flex flex-space-around">
      <div class="shadow-box">
        <form
          class="styled-form"
          name="thresholdform"
          id="thresholdform"
          method="post"
        >
          <div class="flex flex-space-around flex-wrap form-line">
            <h3>Blood Glucose (nmol/L)</h3>
            <div class="flex flex-column form-line-field">
              <label for="bloodGlucoseLower">Lower Threshold</label>
              <input
                type="number"
                id="bloodGlucoseLower"
                name="bloodGlucoseLower"
                step="0.01"
                value="{{patient.bloodGlucoseLow}}"
              />
            </div>
            <div class="flex flex-column form-line-field">
              <label for="bloodGlucoseUpper">Upper Threshold</label>
              <input
                type="number"
                id="bloodGlucoseUpper"
                name="bloodGlucoseUpper"
                step="0.01"
                value="{{patient.bloodGlucoseHigh}}"
              />
            </div>
            <div class="flex flex-column form-line-field align-center">
              <label for="bloodGlucoseRequired">Required</label>
              <input
                type="checkbox"
                id="bloodGlucoseRequired"
                name="bloodGlucoseRequired"
                {{#if patient.bloodGlucoseRequired}}
                checked
                {{/if}}
              />
            </div>
          </div>

          <div class="flex flex-space-around flex-wrap form-line">
            <h3>Insulin Doses</h3>
            <div class="flex flex-column form-line-field">
              <label for="insulinDosesLower">Lower Threshold</label>
              <input
                type="number"
                id="insulinDosesLower"
                name="insulinDosesLower"
                value="{{patient.insulinDosesLow}}"
              />
            </div>
            <div class="flex flex-column form-line-field">
              <label for="insulinDosesUpper">Upper Threshold</label>
              <input
                type="number"
                id="insulinDosesUpper"
                name="insulinDosesUpper"
                value="{{patient.insulinDosesHigh}}"
              />
            </div>
            <div class="flex flex-column form-line-field align-center">
              <label for="insulinDosesRequired">Required</label>
              <input
                type="checkbox"
                id="insulinDosesRequired"
                name="insulinDosesRequired"
                {{#if patient.insulinDosesRequired}}
                checked
                {{/if}}
              />
            </div>
          </div>

          <div class="flex flex-space-around flex-wrap form-line">
            <h3>Weight (kg)</h3>
            <div class="flex flex-column form-line-field">
              <label for="weightLower">Lower Threshold</label>
              <input
                type="number"
                id="weightLower"
                name="weightLower"
                step="0.01"
                value="{{patient.weightLow}}"
              />
            </div>
            <div class="flex flex-column form-line-field">
              <label for="weightUpper">Upper Threshold</label>
              <input
                type="number"
                id="weightUpper"
                name="weightUpper"
                step="0.01"
                value="{{patient.weightHigh}}"
              />
            </div>
            <div class="flex flex-column form-line-field align-center">
              <label for="weightRequired">Required</label>
              <input
                type="checkbox"
                id="weightRequired"
                name="weightRequired"
                {{#if patient.weightRequired}}
                checked
                {{/if}}
              />
            </div>
          </div>

          <div class="flex flex-space-around flex-wrap form-line">
            <h3>Exercise (steps)</h3>
            <div class="flex flex-column form-line-field">
              <label for="exerciseLower">Lower Threshold</label>
              <input type="number" id="exerciseLower" name="exerciseLower" value="{{patient.exerciseLow}}" />
            </div>
            <div class="flex flex-column form-line-field">
              <label for="exerciseUpper">Upper Threshold</label>
              <input type="number" id="exerciseUpper" name="exerciseUpper" value="{{patient.exerciseHigh}}" />
            </div>
            <div class="flex flex-column form-line-field align-center">
              <label for="exerciseRequired">Required</label>
              <input
                type="checkbox"
                id="exerciseRequired"
                name="exerciseRequired"
                {{#if patient.exerciseRequired}}
                checked
                {{/if}}
              />
            </div>
          </div>

          <button type="submit">Submit</button>
        </form>
      </div>
    </div>
  </main>
  <footer>
    <h3>This website has been designed by SpiderWebProTech</h3>
  </footer>
</body>