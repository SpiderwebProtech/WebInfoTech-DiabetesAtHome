<body>
  <header>
    <h1>Diabetes@Home</h1>
  </header>
  <nav>
    <a class="nav-button" href="/">Logout</a>
    <a class="nav-button" href="/patient/dashboard">Dashboard</a>
  </nav>
  <main>
    <h3 class="text-center">Updating Password for {{patient.name}}</h3>
    <div class="flex flex-space-around">
      <div class="shadow-box">
        <form
          class="styled-form"
          name="updatepasswordform"
          id="updatepasswordform"
          method="post"
        >
          <div class="flex flex-space-around flex-wrap form-line">
            <div class="flex flex-column form-line-field">
              <label for="password">New Password:</label>
              <input type="password" id="password" name="password" />
            </div>
          </div>
          <div class="flex flex-space-around flex-wrap form-line">
            <div class="flex flex-column form-line-field">
              <label for="passwordConfirm">Re-enter Password:</label>
              <input type="password" id="passwordConfirm" name="passwordConfirm" />
            </div>
          </div>
          <p id="passwordError"></p>
          <button type="submit" onclick="checkPasswords(event)">Submit</button>
        </form>
      </div>
    </div>
  </main>
  <footer>
    <h3>This website has been designed by SpiderWebProTech</h3>
  </footer>
</body>

<script src="/javascript/patientUpdatePassword.js"></script>